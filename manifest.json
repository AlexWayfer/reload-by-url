{
	"manifest_version": 3,
	"name": "Reload by URL",
	"version": "0.1",

	"description": "Reload tabs by time interval when its URL matches",
	"icons": {
		"16": "images/icons/main/16.png",
		"32": "images/icons/main/32.png",
		"48": "images/icons/main/48.png",
		"64": "images/icons/main/64.png",
		"96": "images/icons/main/96.png",
		"128": "images/icons/main/128.png",
		"256": "images/icons/main/256.png",
		"512": "images/icons/main/512.png"
	},

	"homepage_url": "https://github.com/AlexWayfer/reload-by-url",
	"author": "alex.wayfer@gmail.com",
	"permissions": [
		"tabs",
		"storage",
		"alarms"
	],
	"action": {
		"default_popup": "pages/popup.html",
		"default_icon": "images/icons/main/512.png"
	},
	"background": {
		"service_worker": "scripts/compiled/background.js",
		"type": "module"
	}
}
