{
	"devDependencies": {
		"@rollup/plugin-commonjs": "^24.0.1",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"archiver": "^5.3.1",
		"minimatch": "^9.0.2",
		"postcss": "^8.4.19",
		"postcss-cli": "^10.1.0",
		"postcss-nesting": "^11.2.1",
		"punycode": "^2.1.1",
		"rollup": "^3.7.0",
		"rollup-plugin-multi-input": "^1.3.1",
		"rollup-plugin-notify": "^1.1.0"
	},
	"scripts": {
		"build:styles": "postcss styles/src/ -d styles/compiled/ --base styles/src/ --ext=css",
		"build:scripts": "rollup -c",
		"build": "pnpm run build:styles && pnpm run build:scripts",
		"watch:styles": "pnpm run build:styles --watch",
		"watch:scripts": "pnpm run build:scripts --watch",
		"watch": "pnpm run watch:styles & pnpm run watch:scripts",
		"pack": "node exe/pack.js",
		"release": "node exe/release.js"
	}
}
