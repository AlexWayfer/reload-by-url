{
	"devDependencies": {
		"@rollup/plugin-commonjs": "^25.0.4",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@stylistic/stylelint-plugin": "^2.0.0",
		"archiver": "^6.0.1",
		"eslint": "^8.56.0",
		"minimatch": "^9.0.3",
		"postcss": "^8.4.32",
		"postcss-cli": "^11.0.0",
		"postcss-nesting": "^12.0.1",
		"punycode": "^2.3.1",
		"remark-cli": "^12.0.0",
		"remark-preset-lint-recommended": "^6.1.3",
		"rollup": "^4.9.1",
		"rollup-plugin-multi-input": "^1.4.1",
		"rollup-plugin-notify": "^1.1.0",
		"stylelint": "^16.0.2",
		"stylelint-config-standard": "^35.0.0"
	},
	"scripts": {
		"lint:docs": "remark .",
		"lint:styles": "stylelint styles/ --ignore-path .gitignore",
		"lint:scripts": "eslint scripts/ exe/ --ignore-path .gitignore",
		"lint": "pnpm run lint:docs; docs_lint_result=$?; pnpm run lint:styles; styles_lint_result=$?; pnpm run lint:scripts && [ $styles_lint_result -eq 0 ] && [ $docs_lint_result -eq 0 ]",
		"build:styles": "postcss styles/src/ -d styles/compiled/ --base styles/src/ --ext=css",
		"build:scripts": "rollup -c",
		"build": "pnpm run build:styles && pnpm run build:scripts",
		"watch:styles": "pnpm run build:styles --watch",
		"watch:scripts": "pnpm run build:scripts --watch",
		"watch": "pnpm run watch:styles & pnpm run watch:scripts",
		"pack": "node exe/pack.js",
		"release": "node exe/release.js"
	}
}
